# Get External IP / local IPs
alias ip="curl ipinfo.io/ip"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"

# Quickly serve the current directory as HTTP
alias serve='ruby -run -e httpd . -p 8000'  # Or python -m SimpleHTTPServer :)

alias kitt="open -a 'Google Chrome' https://kitt.lewagon.com/"

# Open tickets page
tickets() {
  open -a 'Google Chrome' https://kitt.lewagon.com/camps/$1/tickets
}

# Open calendar page
calendar() {
  open -a 'Google Chrome' https://kitt.lewagon.com/camps/$1/calendar
}

# Open classmates page
classmates() {
  open -a 'google chrome' https://kitt.lewagon.com/camps/$1/classmates
}

# Open dashboard page
dashboard() {
  open -a "google chrome" https://kitt.lewagon.com/camps/$1/day_dashboard
}

# Open statistics page
stats() {
  open -a "google chrome" https://kitt.lewagon.com/camps/$1/tickets/day_dashboard
}

# Open webpage on chrome
chrome() {
  if [ $# -eq 0 ];
    then
      open -a 'google chrome'
  else
    open -a 'google chrome' https://www.$1
  fi
}

# Open slack
alias slack="open -a 'slack'"

# Kick start day
alias work="open -a slack; open -a 'google chrome' http://localhost:3000; open -a 'google chrome' https://kitt.lewagon.com; open -a 'google chrome' https://calendar.google.com/calendar/b/1/r; open -a 'google chrome' https://github.com/lewagon/kitt; open -a 'google chrome' https://dev.to; open -a mail; stt;"

# Open an app
app() {
  open -a "$1"
}

# Open repo
repo() {
  if [ $# -eq 1 ];
    then
      open -a 'google chrome' https://www.github.com/$1
  else
    open -a 'google chrome' https://www.github.com/$1/$2
  fi
}

# Open PRs of repo
pr() {
  open -a 'google chrome' https://www.github.com/$1/$2/pulls
}

# Open issues of repo
issues() {
  open -a 'google chrome' https://www.github.com/$1/$2/issues
}

# Open driver dashboard
dd() {
  if [ $# -eq 1 ];
    then
      open -a 'google chrome' https://kitt.lewagon.com/cities/$1
  else
    open -a 'google chrome' https://kitt.lewagon.com/cities/london
  fi
}

# navigate in code folder
goto() {
  cd ~/code/$1
}

# navigate in code folder an open
sttt() {
  cd ~/code/$1; stt;
}

# open jupyter notebook
alias jupyter="/anaconda3/bin/jupyter_mac.command ; exit;"
